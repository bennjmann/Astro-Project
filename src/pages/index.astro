---
import Layout from '../layouts/Layout.astro';
import AnimateString from "../components/animateString";
---

<Layout title="Bennjmann Redman">
	<main>
		<div class="section-Container">
			<div>My name is</div>
			<h1> <AnimateString client:only="react" className="lastName"  text="Bennjmann"/>&nbsp;<AnimateString client:only="react" className="firstName" text="Redman"/></h1>
			<div>I am a Developer</div>
		</div>

		<div class="section-Text">
			<p>
				Hello! My name is Bennjmann Redman you can call me Ben for short.
