<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1600px;
		max-width: calc(100% - 2rem);
		line-height: 1.6;
		text-align: center;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	.section-Container {
		position: relative;
		overflow: hidden;
		width: 100%;
		padding: 2em;
		background-color: var(--surface-2);
	}

	.section-Container > div:first-child {
		margin: 0 75% 0 0;
	}
	.section-Container > div:last-child {
		margin: 0 -75% 0 0;
	}


	.section-Text {
		display: flex;
		padding: 1em;
	}



	h1 {
		color: var(--brand);
		max-inline-size: var(--size-header-3);
	}
	h2 {
		max-inline-size: 100%;
	}
	span {
		color: var(--text-1);
	}
	p {
		margin: auto;
		text-align: center;
		max-inline-size: var(--size-content-3);
	}



</style>
<style is:global>

	.firstName {
		color: var(--brand);
	}

	.lastName {
		color: white;
	}

</style>